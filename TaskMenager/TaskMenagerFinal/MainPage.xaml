<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskMenagerFinal.MainPage">

    
    <StackLayout  VerticalOptions="Center">

        <Image x:Name="iconImage" Aspect="AspectFit" HorizontalOptions="FillAndExpand" Margin="0,0,0,50" HeightRequest="150"/>

        <Entry x:Name="emailEntry"  Margin="15"
                   Placeholder="e-mail@domain.com" TextColor="Black" Keyboard="Email" Text="Test"/>
        <Entry x:Name="passwordEntry" Margin="15"
                   Placeholder="YourPassword1234@"
                   IsPassword="True"
                   TextColor="Black" 
                    Text="Test"
                   />
        <Button x:Name="LoginButton" Text="Login"  Margin="15"
                    BackgroundColor="{StaticResource darkGray}"
                    TextColor="White" 
                    Clicked="LoginButton_Clicked"
                    Style="{StaticResource Key=normalButton}"
                />

    </StackLayout>
    
</ContentPage>
   
